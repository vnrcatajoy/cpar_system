<% provide(:title, "Officer: Showing Cause") %>
<div class="row">
	<h1>Showing Cause</h1>
  	<div class="span6">
		<p> <strong>Description:</strong> </p>
		<p><%= @cause.description %> </p>
		<p><strong>Author:</strong></p>
		<p><%= User.find(@cause.user_id).name %></p>
		<p> <strong>Date Issued:</strong></p>
		<p><%= @cause.date_issued %></p>
		<% if current_user?(User.find(@cause.user_id)) %>
    		<%= link_to "Edit Cause", [:edit, :officer, Issue.find(@cause.issue_id), @cause], class: "btn btn-small btn-link" %>
    		<%= link_to "Delete Cause", [:officer, Issue.find(@cause.issue_id), @cause] , method: :delete,
                                    data: { confirm: "Are you sure you want to delete this Cause?" }, class: "btn btn-small btn-link" %>
		<% end %>
		<%= link_to "Back", [:officer, Issue.find(@cause.issue_id)], class: "btn btn-small btn-link" %>	
	</div>
	<%= render 'causecomments_show' %>
</div>