<% provide(:title, 'Edit Action Plan') %>
<h1>Edit Action Plan</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@action_plan) do |f| %>
      <%= render 'shared/activity_form', a: @action_plan %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit "Save Action Plan", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>