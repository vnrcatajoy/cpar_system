<% provide(:title, 'Auditor: Issues Index') %>
<h2>Auditor: Showing All Issues</h2>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Title</th>
      <th>Originator</th>
      <th>Impact</th>
      <th>Status</th>

    </tr>

    <% @issues.each do |issue| %>
    	<tr>
        <td> <%= link_to issue.title, auditor_issue_path(issue) %> </td>
        <td> <%= issue.user.name %> </td>
        <td> <%= issue.issue_impact.name %> </td>
        <td> <%= issue.issue_status.name %> </td>
    	</tr>
    <% end %>

  </table>
  <%= will_paginate %>

<h2>New Issues for Approval</h2>
<table class="table table-striped table-bordered">
    <tr>
      <th>Title</th>
      <th>Originator</th>
      <th>Impact</th>
      <th>Department</th>
      <th>Type</th>
      <th>ISO Id</th>

    </tr>

    <% @issues_new.each do |issue| %>
      <tr>
        <td> <%= link_to issue.title, auditor_issue_path(issue) %> </td>
        <td> <%= issue.user.name %> </td>
        <td> <%= issue.issue_impact.name %> </td>
        <td> <%= issue.department.name %> </td>
        <td> <%= issue.issue_type.name %></td>
        <td> <%= issue.iso_nc.title %></td>
      </tr>
    <% end %>

  </table>
  <%= will_paginate %>