<% provide(:title, "Showing Action Plan") %>
<h1>Auditor: Showing Action Plan</h1>

<div class="row">
  <div class="span6">
		<% if @action_plan.ap_reviewer_id == nil %>
			<strong>This Action plan has not yet been reviewed.</strong>
			<!--insert button to Review this as an Auditor-->
			<p><%= "Signed in as: #{current_user.name}" %>
				<%= render 'review' , action_plan: @action_plan %> 
			</p>
		<% else %>
			<strong><%= "This Action plan has been reviewed by #{User.find(@action_plan.ap_reviewer_id).name}." %></strong>
		<% end %>
		<p> <strong>Description:</strong> </p>
		<p><%= @action_plan.description %> </p>
		<p><strong>Issue:</strong></p>
		<p><% if @action_plan.issue_id == nil %>
            	Issue Title
          	<% else %>
            	<%= Issue.find(@action_plan.issue_id).title %>
          	<% end %>
      	</p>
      	<p><strong>Final Review Date: <%= @action_plan.final_review_date %></strong></p>
      	<p><strong>Final Implementation Review Date: <%= @action_plan.final_implementation_review_date %></strong></p>
	</div>
		<div class="span9">
		<!--Show Activities under this Action Plan-->
		<%= render 'shared/activities_show', action_plan: @action_plan  %>
	    <%= link_to 'Back', auditor_action_plans_path , class: "btn btn-small btn-primary"%></p>
	
		</div>
</div>
