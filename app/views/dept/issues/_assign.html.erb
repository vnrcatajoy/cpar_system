<%= form_for [:dept, @issue] do |f| %>
	<%= f.label :responsible_officer_id %> 
	<%= f.select :responsible_officer_id, @users.collect { |u| [u.name, u.id] } %>

	<%= f.submit "Assign User to this Issue", confirm: 'Are you sure you want to assign this User to this Issue?', class: "btn btn-small btn-primary" %>
<% end %>