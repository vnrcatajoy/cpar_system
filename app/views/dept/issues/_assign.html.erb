<%= form_for [:dept, @issue] do |f| %>
	<%= f.label :responsible_officer_id %> 
	<%= f.select :responsible_officer_id, @users.collect { |u| [u.name, u.id] } %>

	<%= f.submit "Assign Officer to this Issue", confirm: 'Are you sure you want to assign this Officer to this Issue?', class: "btn btn-small btn-primary" %>
<% end %>

<%= form_for [:dept, @issue] do |f| %>
	<%= f.label "Department Head" %> 
	<%= f.select :responsible_officer_id, @users_dept.collect { |u| [u.name, u.id] } %>

	<%= f.submit "Assign Department Head to this Issue", confirm: 'Are you sure you want to assign a Department Head to this Issue?', class: "btn btn-small btn-primary" %>
<% end %>