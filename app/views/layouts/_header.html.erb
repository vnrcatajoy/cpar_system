<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <!--<% if signed_in? %>
         <li> <%= link_to current_user.name, current_user %></li>
      <% end %>-->
      <%= link_to "Web CPAR", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li> <%= link_to "Signed in as: #{current_user.name}", current_user %></li>
          <% end %>
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
            <% if current_user.admin? %>
              <li><%= link_to "Control Panel", admin_path %></li>
            <% end %> 
            <li><%= link_to "Issues", issues_path %></li>
            <li><%= link_to "Action Plans", action_plans_path %></li> 
