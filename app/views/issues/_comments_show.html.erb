<div class="row">
<div class="span6">
	<div class="row">
		<div class="span3">
		<%= form_for @issue_comment do |f| %>
			<%= f.hidden_field :issue_id, value: @issue.id %>
			<%= f.hidden_field :user_id, value: current_user.id %>
			<%= f.text_area :content, size: "30x5" %>
			<%= f.submit "Add Comment", class: "btn btn-small btn-link" %>
		<% end %>
		<h4>Issue Updates:</h4>
		<% if @issueupdates.any? %>
			<% @issueupdates.each do |iu| %>
				<%= iu.created_at.to_s %>
				<p>	<%= iu.content %>
				</p>
			<% end %>
		<% end %>
		<%= will_paginate @issueupdates %>
		</div>
		<div class="span3">
		<h4>Comments:</h4>
		<% if @issuecomments.any? %>
			<% @issuecomments.each do |ic| %>
				<%= ic.created_at.to_s %>
				<p><b><%= User.find(ic.user_id).name + ":" %></b><p>
				<p>	<%= ic.content %>
				</p>
				<% if current_user.admin %>
					<p><%= link_to "delete", ic, method: :delete, confirm: "Are you sure you want to delete this comment?" %></p>
				<% end %>
			<% end %>
		<% end %>
		<%= will_paginate @issuecomments %>
		</div>
	</div>
</div>
</div>